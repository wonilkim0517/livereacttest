{
  "env": {
    "browser": true,  // 브라우저 환경을 대상으로 설정
    "es2021": true    // ES2021 문법을 사용할 수 있도록 설정
  },
  "extends": "eslint:recommended",  // ESLint의 권장 규칙을 기반으로 설정
  "parserOptions": {
    "ecmaVersion": 12,   // ECMAScript 2021 (ES12) 문법 지원
    "sourceType": "module"  // ES 모듈 사용
  },
  "rules": {
    "no-unused-vars": "off",  // 사용되지 않는 변수에 대한 경고 비활성화
    "no-console": "off"       // console.log 사용에 대한 경고 비활성화
  }
}